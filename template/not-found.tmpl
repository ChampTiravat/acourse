{{define "app-body"}}
<div id="not-found">
  <div class="grid-container">
    <div class="text-not-found _flex-column _cross-center _full-width">
      <img src="{{.Image}}" alt="404">
    </div>
  </div>
</div>
{{end}}

{{define "app-script"}}
{{end}}

{{define "app-style"}}
<style>
  #not-found {
    padding-top: 32px;
    min-height: calc(100vh - 311px);
    background-color: white;
  }

  #not-found img {
    width: 60%;
  }

  @media only screen and (max-width: 767px) {
    #not-found {
      padding-top: 32px;
      min-height: calc(100vh - 417px);
    }

    #not-found img {
      width: 100%;
    }

    .text-not-found {
      font-size: 32px
    }
  }
</style>
{{end}}
