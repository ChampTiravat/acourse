        <i class="fa fa-github _color-sub"></i>
      </a>
    </div>
    <div class="col-xs-12 col-md-6 _font-size-big">
      Made with &nbsp<i class="fa fa-heart _color-negative pulse"></i>&nbsp;&nbsp;by
      <a class="_color-sub" href="https://moonrhythm.info" target="_blank">Moon Rhythm</a>
    </div>
  </footer>
{{end}}

{{define "script"}}
  <script>
    // Navbar scroll event
    ;(() => {
      let didScroll
      let lastScrollTop = 0
      let delta = 5
      let navbarHeight = $('#navbar').outerHeight()

      $(window).scroll(() => {
        didScroll = true
      })

      const hasScrolled = () => {
        const st = $(this).scrollTop()

        if (Math.abs(lastScrollTop - st) <= delta) return

        if (st > lastScrollTop && st > navbarHeight) {
          $('#navbar').removeClass('nav-down').addClass('nav-up')
        } else {
          if (st + $(window).height() < $(document).height()) {
            $('#navbar').removeClass('nav-up').addClass('nav-down')
          }
        }
        lastScrollTop = st
      }

      setInterval(() => {
        if (didScroll) {
          hasScrolled()
          didScroll = false
        }
      }, 250)
    })()

    function bindFileInputImage (input, img) {
      if (!input || !img) return
      input.onchange = () => {
        const fp = input.files && input.files[0]
        if (fp) {
          const reader = new FileReader()
          reader.onload = (e) => {
            img.src = e.target.result
          }
          reader.readAsDataURL(fp)
        }
      }
    }
  </script>
  {{template "app-script" $}}
{{end}}


