{{define "app-body"}}
  <div id="course" class="page-pattern">
    <div class="grid-container">
      <div class="acourse-card _flex-column">

        <div class="">
          <img class="course-img" src="{{.Course.Image}}" width="100%">
        </div>

        <div class="acourse-segment">

          {{if .Enrolled}}
          <div id="course-player" class="acourse-block-big">
            <div class="col-xs-12 row">
              <div class="video-player-container _no-padding col-xs-12 col-md-8">
                <div class="video-player">
                  {{range $i, $x := .Course.Contents}}
                    {{if .VideoID}}
                      <div class="video" v-if="selectedItem === {{$i}}">
                        <iframe
                          width="560" height="315"
                          frameborder="0" scrolling="no" allowfullscreen
                          src="https://www.youtube.com/embed/{{.VideoID}}?rel=0&hd=1">
                        </iframe>
                      </div>
                    {{end}}
                  {{end}}
                  {{range $i, $x := .Course.Contents}}
                    <div v-if="selectedItem === {{$i}}">
                      {{.Desc | markdown}}
                      <br>
                      ---------
                      <br>
                    </div>
                  {{end}}
                </div>
              </div>

              <div class="playlist-container _no-padding _flex-column col-xs-12 col-md-4">
                <div class="playlist-title _font-bold">
                  {{ len .Course.Contents }} Video
                </div>
                <div class="playlist-list">
                {{range $i, $x := .Course.Contents}}
                  <div
                    class="list"
                    :class="{active: selectedItem === {{$i}} }"
                    @click="selectedItem = {{$i}}">
                    {{incr $i}}. {{.Title}}
                  </div>
                {{end}}
                </div>
              </div>

              <div class="course-resourse">
                <h4>Course Resourse</h4>
                {{range $i, $x := .Course.Contents}}
                  <!-- TODO -->
                  {{if .DownloadURL}}
                    <a
                      v-if="selectedItem === {{$i}}"
                      href="{{.DownloadURL}}"
                      target="_blank">
                      Download
                    </a>
                  {{end}}
                {{end}}
              </div>

            </div>
          </div>
          {{end}}

          <div class="course-content _flex-row">
            <div class="_flex-column _flex-span">

              <div class="acourse-block">
                <h1 class="col-xs-12">{{.Course.Title}}</h1>
              </div>

              <div class="acourse-block-bigger">
                <div class="col-xs-12">
                  {{if not .Course.Start.Time.IsZero}}
                    <div class="acourse-label -red">Start At: {{.Course.Start.Time | date}}</div>
                  {{end}}
                </div>
              </div>

              <div class="acourse-block">
                <div class="col-xs-12">
                  <div class="acourse-header">Course Detail</div>
                  <div class="course-detail _pre-wrap _font-sub">
                    {{.Course.Desc | markdown}}
                  </div>
                </div>
              </div>
            </div>

            <div class="course-sidebar _flex-column acourse-block-big">
              <div class="acourse-segment _bg-color-base-2">
                <div class="col-xs-12">
                  <div class="acourse-block _font-bold _font-size-bigger">฿ 1,300</div>

                  {{if .PendingEnroll}}
                    <button class="acourse-button -disable _font-sub _full-width acourse-block disabled">Pending Enroll</button>
                  {{else}}
                    {{if and (not .Owned) (not .Enrolled)}}
                    <a href="/course/{{.Course.Link}}/enroll">
                      <button class="acourse-button -positive _font-sub _full-width acourse-block">Enroll Now</button>
                    </a>
                    {{end}}
                  {{end}}

                  {{if .Owned}}
                  <div class="acourse-block-big">
                    <a href="/editor/course?id={{.Course.ID}}">
                      <button class="acourse-button -primary _font-sub _full-width acourse-block">Edit Course</button>
                    </a>
                    <a href="/editor/content?id={{.Course.ID}}">
                      <button class="acourse-button -primary _font-sub _full-width acourse-block">Edit Content</button>
                    </a>
                  </div>
                  {{end}}

                  <div>
                    <div class="acourse-header">Lecturer</div>
                    <div class="course-detail _font-sub">
                      ข้อมูลผู้สอน
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
{{end}}

{{define "app-script"}}
<script>
  new Vue({
    el: '#course',
    name: 'CourseDetail',
    delimiters: ['${', '}'],
    data () {
      return {
        selectedItem: 0
      }
    }
  })
</script>
{{end}}

{{define "app-style"}}
<style>
  #course {
    position: relative;
    z-index: 1;
    padding-top: 32px;
  }

  #course .acourse-header {
    margin-bottom: 8px;
  }

  #course .acourse-card {
    margin-bottom: 32px;
  }

  #course .course-img {
    height: 200px;
    object-fit: cover;
    vertical-align: bottom;
  }

  .course-detail {
    line-height: 1.6em;
  }

  .course-detail h1,
  .course-detail h2,
  .course-detail h3,
  .course-detail h4,
  .course-detail h5,
  .course-detail h6 {
    margin-top: 16px;
  }

  #course .playlist-title {
    padding: 8px;
    background: #f1f4f4;
    border-bottom: 1px solid #e8e8e8;
  }

  #course .playlist-list {
    flex: 1;
    padding: 12px 12px 12px 0px;
    overflow: auto;
    background: #f1f4f4;
  }

  #course .playlist-list .list {
    padding: 10px 12px;
    cursor: pointer;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
  }

  #course .playlist-list .list:hover,
  #course .playlist-list .list.active {
    background: white;
  }

  #course .playlist-list .list.active {
    font-weight: 600;
    border-top: 1px solid #e3e7ef;
    border-bottom: 1px solid #e3e7ef;
    border-right: 1px solid #e3e7ef;
  }

  #course .playlist-container {
    height: 300px;
  }

  #course .course-sidebar {
    flex-basis: 300px;
    padding: 0 8px;
  }

  #course-player {
    margin-top: 8px;
  }

  @media only screen and (max-width: 767px) {
    #course {
      padding: 0;
      margin: 0;
    }
    #course>.grid-container {
      margin: 0;
      width: 100%;
    }
    #course .acourse-card {
      margin: 0px;
      border-radius: 0;
    }
    #course .course-content {
      flex-direction: column-reverse;
    }
    #course .course-sidebar {
      flex-basis: initial;
    }
    #course .acourse-card>.acourse-segment {
      padding-left: 0px;
      padding-right: 0px;
      padding-top: 0px;
    }
    #course .course-sidebar>.acourse-segment {
      padding-left: 0px;
      padding-right: 0px;
    }
  }

  @media only screen and (min-width: 768px) {
    #course .course-img {
      height: 250px;
    }
    #course .playlist-container {
      height: 400px;
    }
  }

  @media only screen and (min-width: 970px) {
    #course .course-img {
      height: 300px;
    }
    #course .playlist-container {
      height: 356px;
    }
  }

  @media only screen and (min-width: 1170px) {
    #course .course-img {
      height: 350px;
    }
    #course .playlist-container {
      height: 431px;
    }
  }
</style>
{{end}}