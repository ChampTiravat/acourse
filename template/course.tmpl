{{define "app-body"}}
  <div id="course" class="page-pattern">
    <div class="grid-container">
      <div class="acourse-card _flex-column">
        <div class="acourse-block">
          <img class="course-img" src="{{.Course.Image}}" width="100%">
        </div>
        <div class="acourse-block">
          <div class="acourse-header col-xs-12">{{.Course.Title}}</div>
        </div>

        <div class="acourse-block">
          <div class="col-xs-12">
            {{if not .Course.Start.IsZero}}
              <p>Start At: {{.Course.Start | date}}</p>
            {{end}}
            <div class="_font-sub course-detail">
              {{.Course.Desc | html}}
            </div>
          </div>
        </div>
      {{if .Enrolled}}

        <div class="acourse-block">
          <div class="col-xs-12 row">
            <div class="video-player-container _no-padding col-xs-12 col-md-8">
              <div class="video-player">
                {{range $i, $x := .Course.Contents}}
                  {{if .VideoID}}
                    <div class="video" v-if="selectedItem === {{$i}}">
                      <iframe
                        width="560" height="315"
                        frameborder="0" scrolling="no" allowfullscreen
                        src="https://www.youtube.com/embed/{{.VideoID}}?rel=0&hd=1">
                      </iframe>
                    </div>
                    {{.Desc | html}}
                  {{end}}

                  {{if .DownloadURL}}
                    <a href="{{.DownloadURL}}" target="_blank">Download</a>
                  {{end}}

                {{end}}
              </div>
            </div>

            <div class="playlist-container _no-padding _flex-column col-xs-12 col-md-4">
              <div class="playlist-title _text-bold">
                {{ len .Course.Contents }} Video
              </div>
              <div class="playlist-list">
              {{range $i, $x := .Course.Contents}}
                <div 
                  class="list"
                  :class="{active: selectedItem === {{$i}} }"
                  @click="selectedItem = {{$i}}">
                  {{incr $i}}. {{.Title}}
                </div>
              {{end}}
              </div>
            </div>
          </div>
        </div>
      {{end}}
      
      </div>
    </div>
  </div>
{{end}}

{{define "app-script"}}
<script>
  new Vue({
    el: '#course',
    name: 'CourseDetail',
    delimiters: ['${', '}'],
    data () {
      return {
        selectedItem: 0
      }
    }
  })
</script>
{{end}}

{{define "app-style"}}
  <style>
    #course {
      position: relative;
      z-index: 1;
      padding-top: 48px;
    }

    #course .acourse-card {
      margin-bottom: 32px;
    }

    #course .course-img {
      height: 200px;
      object-fit: cover;
    }
    .course-detail {
      white-space: pre-wrap;
      line-height: 1.6em;
    }
    .course-detail h1,
    .course-detail h2,
    .course-detail h3,
    .course-detail h4,
    .course-detail h5,
    .course-detail h6 {
      margin-top: 16px;
    }

    #course .playlist-title {
      padding: 8px;
      background: #f1f4f4;
      border-bottom: 1px solid #e8e8e8;
    }
    #course .playlist-list {
      flex: 1;
      padding: 12px 12px 12px 0px;
      overflow: auto;
      background: #f1f4f4;
    }
    #course .playlist-list .list {
      padding: 10px 12px;
      cursor: pointer;
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;
    }
    #course .playlist-list .list:hover,
    #course .playlist-list .list.active {
      background: white;
    }
    #course .playlist-list .list.active {
      font-weight: 600;
      border-top: 1px solid #e3e7ef;
      border-bottom: 1px solid #e3e7ef;
      border-right: 1px solid #e3e7ef;
    }
    #course .playlist-container {
      height: 300px;
    }
    @media only screen and (max-width: 767px) {
      #course {
        padding: 0;
        margin: 0;
      }
      #course > .grid-container {
        margin: 0;
        width: 100%;
      }
      #course .acourse-card {
        margin: 0px;
      }
    }
    @media only screen and (min-width: 768px) {
      #course .course-image {
        height: 150px;
      }
      #course .playlist-container {
        height: 400px;
      }
    }
    @media only screen and (min-width: 970px) {
      #course .playlist-container {
        height: 356px;
      }
    }
    @media only screen and (min-width: 1170px) {
      #course .playlist-container {
        height: 431px;
      }
    }
  </style>
{{end}}