{{define "own-course-card"}}
  <a href="/course/{{.Link}}" id="course-card" class="acourse-card -hover-rise _flex-column _color-dark">
    <img class="course-cover placeholder" src="{{.Image}}" width="100%">
    <div class="course-detail acourse-segment _flex-column _flex-span _main-start">

      <h4>{{.Title}}</h4>

      <div class="acourse-block">
        <div class="acourse-label {{.Type | courseType}} _font-bold">{{.Type | courseType}}</div>
        {{if eq .Type live}}
          <div class="live-date _font-size-small">Start at {{.Start.Time | date}}</div>
        {{end}}
      </div>

      <div class="acourse-block-big _flex-span _font-sub _font-size-normal">
        {{.ShortDesc}}
      </div>

      <div class="_flex-row _main-space-between">
        <div class="course-student _color-dark">
          <i class="fa fa-user"></i>&nbsp {{.EnrollCount}}
        </div>
      </div>

    </div>
  </a>
{{end}}

{{define "own-course-card-style"}}
<style>
  #course-card .course-cover {
    flex-basis: 160px;
    height: 160px;
    min-height: 0;
    object-fit: cover;
  }

  #course-card .acourse-label.Live {
    background-color: #ff4e4e;
  }

  #course-card .acourse-label.eBook {
    background-color: #55da65;
  }

  #course-card .acourse-label.Video {
    background-color: #594eff;
  }

  #course-card .live-date {
    margin-left: 8px;
    color: gray;
    display: inline-block;
  }

  #course-card .course-price .discount {
    text-decoration: line-through;
    font-weight: 100;
    font-size: 13px;
  }

  #course-card .placeholder {
    background-image: url(/~/img/placeholder-img.svg);
    background-size: cover;
  }
</style>
{{end}}