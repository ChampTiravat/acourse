{{define "course-card"}}
<a href="/course/{{.URL}}">
  <img src="{{.Image}}">
  <h4>{{.Title}}</h4>
  <p>{{.Type | courseType}}</p>
  {{if eq .Type live}}
    <p>{{.Start | date}}</p>
  {{end}}
  <p>{{.ShortDesc}}</p>
  <p>Student: {{.EnrollCount}}</p>

  {{if le .Price 0.0}}
    <p>FREE</p>
  {{else}}
    <p class="{{if .Option.Discount}}line{{end}}">{{.Price | currency}}</p>
  {{end}}
  {{if .Option.Discount}}
    <p>{{.Discount | currency}}</p>
  {{end}}
</a>
<hr>
{{end}}