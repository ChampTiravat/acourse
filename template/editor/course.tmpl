{{define "app-style"}}
<style>
  #course-edit {
    padding-top: 32px;
  }

  #course-edit .acourse-card {
    width: initial;
  }

  #course-edit #cover {
    height: 200px;
  }

  @media only screen and (max-width: 767px) {
    #course-edit #cover {
      height: 140px;
    }
    #course-edit .grid-container>div {
      padding: 0;
    }
  }
</style>
