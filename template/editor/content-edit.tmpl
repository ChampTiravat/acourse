{{define "app-body"}}
<div id="content-edit">
  <div class="grid-container">
    <div class="col-xs-12 col-lg-8 col-lg-offset-2">
      <div class="acourse-header _color-sub">
        Edit: {{.Content.Title}} <br>
        <div class="_font-size-big">
          <span class="_font-bold _color-dark">Course: </span>
          <a href="/course/{{.Course.Link}}" class="acourse-link">{{.Course.Title}}</a>
        </div>
      </div>
      <div class="acourse-card acourse-segment acourse-block-bigger">

        <form method="POST">
          {{xsrf}}

          <div class="input-field _flex-column">
            <label>Title</label>
            <input class="acourse-input" name="Title" type="text" placeholder="Content Title" required value="{{.Content.Title}}">
          </div>

          <div class="input-field _flex-column">
            <label>Description</label>
            <textarea class="acourse-input" id="decs-text" rows="10" name="Desc">{{.Content.Desc}}</textarea>
            <div class="_flex-row _opa50">
              <img src="/~/img/md.svg"><div class="_font-size-small">&nbsp;Styling with Markdown is supported</div>
            </div>
          </div>

          <div class="input-field _flex-column">
            <label>Video ID</label>
            <input class="acourse-input" type="text" name="VideoID" placeholder="Video ID" value="{{.Content.VideoID}}">
          </div>

          <button class="acourse-button -primary _font-sub _full-width" type="submit">
            Edit Content
          </button>

        </form>

      </div>
    </div>
  </div>
</div>
{{end}}

{{define "app-script"}}
{{end}}

{{define "app-style"}}
<style>
  #content-edit {
    padding-top: 32px;
    min-height: calc(100vh - 236px);
  }

  #content-edit .acourse-header a {
    color: #adadad;
  }

  #content-edit .acourse-card {
    width: initial;
  }

  @media only screen and (max-width: 767px) {
    #course-create .grid-container > div {
      padding: 0;
    }
  }
</style>
{{end}}