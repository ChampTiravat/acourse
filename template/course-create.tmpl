{{define "app-style"}}
<style>
  #course-create {
    padding-top: 32px;
    min-height: calc(100vh - 194px);
  }
  #course-create .acourse-card {
    width: initial;
  }
  input[type='date'] {
    position: relative;
  }
  input[type='date']:before {
    position: absolute;
    top: 11px; left: 14px;
    content: attr(data-date);
    display: inline-block;
    color: black;
  }
</style>
{{end}}